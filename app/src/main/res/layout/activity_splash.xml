<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/splash_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBg"
    android:orientation="vertical"
    >

    <ImageView
        android:layout_centerHorizontal="true"
        android:id="@+id/splash_logo"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_above="@+id/splash_s"
        android:layout_marginBottom="0dp"
        android:src="@drawable/logo_clean"
        android:visibility="invisible" />

<com.example.tudou.mymusicss.custom.textpath.SyncTextPathView
    android:id="@+id/syncTextPathView"
    android:layout_marginTop="10dp"
    android:layout_centerInParent="true"
    android:layout_width="wrap_content"
    android:layout_height="100dp"
    android:layout_below="@+id/splash_logo"
    app:duration="3000"
    app:showPainter="true"
    app:text="Music"
    app:textInCenter="true"
    app:textSize="20sp"
    app:paintStrokeColor="@color/colorWhite"
    app:pathStrokeColor="@color/colorWhite"
    />/>
    <TextView
        android:layout_centerVertical="true"
        android:id="@+id/splash_m"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:layout_toLeftOf="@+id/splash_u"
        android:padding="2dp"
        android:text="M"
        android:textColor="@color/colorWhite"
        android:textSize="25sp"
        android:visibility="invisible" />

    <TextView
        android:layout_centerVertical="true"

        android:id="@+id/splash_u"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:layout_toLeftOf="@+id/splash_s"
        android:padding="2dp"
        android:text="u"
        android:textColor="@color/colorWhite"
        android:textSize="25sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/splash_s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp"
        android:padding="2dp"
        android:text="s"
        android:textColor="@color/colorWhite"
        android:textSize="25sp"
        android:visibility="invisible" />

    <TextView
        android:layout_centerVertical="true"

        android:id="@+id/splash_i"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:layout_marginBottom="0dp"
        android:layout_toRightOf="@+id/splash_s"
        android:padding="2dp"
        android:text="i"
        android:textColor="@color/colorWhite"
        android:textSize="25sp"
        android:visibility="invisible" />

    <TextView
        android:layout_centerVertical="true"
        android:id="@+id/splash_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@+id/splash_i"
        android:padding="2dp"
        android:text="c"
        android:textColor="@color/colorWhite"
        android:textSize="25sp"
        android:visibility="invisible" />


    <TextView
        android:id="@+id/splash_name"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/app_name"
        android:textColor="@color/colorWhite"
        android:textSize="25sp"
        android:visibility="invisible" />
</RelativeLayout>
