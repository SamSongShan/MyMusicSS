<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MZBannerView">
        <attr name="open_mz_mode" format="boolean"/>
        <attr name="canLoop" format="boolean"/>
        <attr name="indicatorPaddingLeft" format="dimension"/>
        <attr name="indicatorPaddingRight" format="dimension"/>
        <attr name="indicatorPaddingTop" format="dimension"/>
        <attr name="indicatorPaddingBottom" format="dimension"/>
        <attr name="indicatorAlign">
            <enum name="left" value="0"/>
            <enum name="center" value="1"/>
            <enum name="right" value="2"/>
        </attr>
        <attr name="middle_page_cover" format="boolean"/>
    </declare-styleable>
    <attr name="duration" format="integer"/>
    <attr name="showPainter" format="boolean"/>
    <attr name="showPainterActually" format="boolean"/>
    <attr name="pathStrokeWidth" format="dimension"/>
    <attr name="pathStrokeColor" format="color"/>
    <attr name="paintStrokeWidth" format="dimension"/>
    <attr name="paintStrokeColor" format="color"/>
    <attr name="textStrokeColor" format="color"/>
    <attr name="fillColor" format="color"/>
    <attr name="repeat" format="enum">
        <enum name="RESTART" value="1"/>
        <enum name="REVERSE" value="2"/>
    </attr>

    <declare-styleable name="TextPathView">
        <attr name="textSizeTPV" format="dimension"/>
        <attr name="text" format="string"/>
        <attr name="autoStart" format="boolean"/>
        <attr name="showInStart" format="boolean"/>
        <attr name="textInCenter" format="boolean"/>
        <attr name="duration" />
        <attr name="showPainter" />
        <attr name="showPainterActually" />
        <attr name="pathStrokeWidth" />
        <attr name="pathStrokeColor" />
        <attr name="paintStrokeWidth" />
        <attr name="paintStrokeColor" />
        <attr name="repeat" />
    </declare-styleable>

    <declare-styleable name="PathView">
        <attr name="duration" />
        <attr name="showPainter" />
        <attr name="showPainterActually" />
        <attr name="pathStrokeWidth" />
        <attr name="pathStrokeColor" />
        <attr name="paintStrokeWidth" />
        <attr name="paintStrokeColor" />
        <attr name="repeat" />
    </declare-styleable>

    <!-- 联动ViewPager的圆点 -->
    <declare-styleable name="navView">
        <attr name="checkedImg" format="reference"/>
        <attr name="uncheckedImg" format="reference"/>
        <attr name="count" format="integer"/>
        <attr name="padding" format="integer"/>
    </declare-styleable>
    <!-- 扇形进度条 -->
    <declare-styleable name="sectorProgressBar">
        <attr name="max" format="integer"/>
        <attr name="ratio" format="float"/>
        <attr name="shape">
            <enum name="circle" value="0"/>
            <enum name="rect" value="1"/>
        </attr>
    </declare-styleable>
    <!-- 滚动的广告效果 -->
    <declare-styleable name="ADTextView">
        <!--文字进入与消失的时间-->
        <attr name="speed" format="integer"/>
        <!--文字段数 每种颜色一段-->
        <attr name="num" format="integer"/>
        <!--文字停留在中心的时间-->
        <attr name="interval" format="integer"/>
        <!--内容文字大小-->
        <attr name="textSize" format="dimension"/>
    </declare-styleable>

    <!-- 日历 -->
    <declare-styleable name="CalendarRView">
        <attr name="showStyle">
            <enum name="month" value="0"/>
            <enum name="week" value="1"/>
            <enum name="day" value="2"/>
        </attr>
        <attr name="firstDayOfWeek">
            <enum name="MON" value="0"/>
            <enum name="SUN" value="1"/>
        </attr>
        <attr name="selectedDay" format="string"/>
    </declare-styleable>

    <!-- ratebar星级评论 -->
    <declare-styleable name="RatingBarView">

        <attr name="starImageSize" format="dimension" />
        <attr name="starCount" format="integer" />
        <attr name="starCountLevel" format="integer" />
        <attr name="starPaddRight" format="dimension" />
        <attr name="starEmpty" format="reference" />
        <attr name="starFill" format="reference" />
        <attr name="starClickable" format="boolean"/>

    </declare-styleable>
</resources>